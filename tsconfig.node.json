{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2017",          // нужен для async/await
      "lib": ["DOM", "ES2017"],    // включает поддержку Promise и других возможностей ES2017
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  